@using FrooshKar.Domain.Core.DTOs
@model FixedPriceProductViewModel
@{
	Layout = "_VendorProfileLayout";
}

<section class="adpost-part">
	<div class="container" style="background-color: white">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <form class="adpost-form" asp-controller="Vendor" asp-action="CreateFixedPriceProduct" role="form" enctype="multipart/form-data" method="post">
	                <div class="adpost-card">
		                <div class="adpost-title"><h3>اطلاعات تبلیغ</h3></div>
		                <div class="row">
			                <div class="col-lg-12">
				                <div class="form-group"><label class="form-label">عنوان محصول</label><input type="text" class="form-control" placeholder="عنوان محصول خود را در اینجا تایپ کنید" asp-for="Title" /></div>
			                </div>
			                <div class="col-lg-12">
				                <div class="form-group"><label class="form-label">تصاویر محصول</label><input type="file" class="form-control" asp-for="FormFiles" multiple/></div>
			                </div>
			                <div class="col-lg-4">
				                <div class="form-group">
					                <label class="form-label">دسته محصول </label>
					                <select class="form-control custom-select"
						                asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, nameof(CategoryDtoModel.Id).ToString(), nameof(CategoryDtoModel.Title)))"><option>لطفا دسته بندی را انتخاب نمایید</option>
					                </select>
				                </div>
			                </div>
			                <div class="col-lg-4">
				                <div class="form-group"><label class="form-label">قیمت </label><input type="number" class="form-control" placeholder="مقدار قیمت گذاری خود را وارد کنید" asp-for="UnitPrice"/></div>
			                </div>
			                <div class="col-lg-4">
				                <div class="form-group"><label class="form-label">تعداد </label><input type="number" class="form-control" placeholder="تعداد محصول را وارد کنید" asp-for="Quantity"/></div>
			                </div>
			                <div class="col-lg-12">
				                <div class="form-group"><label class="form-label">شرح آگهی</label><textarea class="form-control" placeholder="پیام خود را توصیف کنید" asp-for="Description"></textarea></div>
			                </div>
		                </div>
	                </div>
	                <div class="form-group text-right">
						<button class="btn btn-inline submit"><i class="fas fa-check-circle"></i><span>ثبت محصول</span></button>
	                </div>
                </form>
            </div>
        </div>
    </div>
</section>
